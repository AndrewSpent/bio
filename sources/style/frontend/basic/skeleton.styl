.biolinks
	margin-left: auto
	margin-right: auto
	max-width: 400px
	padding-top: 5vh


.description, .thumbnail
	margin-bottom: $m
	text-align: center

.thumbnail img
	border-radius: 50%
	display: block
	margin-left: auto
	margin-right: auto

.button
	border: 2px solid $dark
	background-color: $dark
	border-radius: 2px
	display: block
	margin-bottom: $xs
	padding: $xs $xxs
	color: whitesmoke
	text-align: center
	transition: all .33s ease
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
	&:hover
		background-color: $gray